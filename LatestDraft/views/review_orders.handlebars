        <tr>
        {{/each}}
    </table>
    </br>
    <form action="/review_orders" method="post">
        <div class = "container">
            <h1>Insert New Customer Order:</h1>
            <p>To add a new order for a customer please fill out the form below.</p>
            <b>Fields to Insert:</b>
            Customer ID:<select  name="customer_id"> 
                {{#each order}}
                <option value="{{customer_id}}">{{customer_id}}</option>
                {{/each}}
            </select><br>
            Order Date (YYYY-MM-DD):
                <input type="date" name="order_date" size="30" maxlength="100" required>
            </select><br />
            Order Complete (Yes/No):
                <select  name="order_complete"> 
                {{#each order}}
                <option value="{{order_complete}}">{{order_complete}}</option>
                {{/each}}
            </select><br />
            <button type="submit" value="Submit review" id="submit">Submit</button>
        </div>
    </form>


