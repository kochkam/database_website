    <h3>All Customer Orders</h3>
   <table>
      <thead>
         <th>Customer ID</th>
         <th>Order Number</th>
         <th>First Name</th>
         <th>Last Name</th>
         <th>Order Completed</th>
     </thead>
    <tbody>
        {{#each order}}
        <tr>
          <td>{{customer_id}}</td>
          <td>{{order_num}}</td>
          <td>{{first_name}}</td>
